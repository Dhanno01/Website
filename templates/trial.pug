extends layout.pug

block style
    style
        include ../static/style.css
        include ../static/trialstyle.css

block content
    div.container
        h1 Request Your Trial Dance Session
        p You will receive a message with the class details. Our executive will assist you with the same.
        form(action="/trial", method="post", class="myform", id="contactForm")
            input(type="text", class="myinput", name="name", placeholder="Name", autofocus)
            input(type="tel", class="myinput", name="phone", placeholder="Mobile No.")
            input(type="email", class="myinput", name="email", placeholder="Email")
            select(name="dance", class="myinput")
                option(value="") Select Dance Style
                option(value="Jazz") Jazz
                option(value="Salsa") Salsa
                option(value="Hip Hop") Hip Hop
                option(value="Bollywood") Bollywood
                option(value="Contemporary") Contemporary
                option(value="Classical") Classical
                option(value="Bharatanatyam") Bharatanatyam
                option(value="Kathak") Kathak
                option(value="Manipuri") Manipuri
            button(type="submit", class="btn") Submit
