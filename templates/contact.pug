extends layout.pug

block style
    style
        include ../static/style.css
        include ../static/Contactstyle.css

block content
    div.container
        h1 Contact Us
        p Send us your queries and we will get back to you.
        form(action="/contact", method="post", class="myform", id="contactForm")
            input(type="text", class="myinput", name="name", placeholder="Name", autofocus, )
            input(type="tel", class="myinput", name="phone", placeholder="Mobile No.", )
            input(type="email", class="myinput", name="email", placeholder="Email")
            input(type="text", class="myinput", name="info", placeholder="Query", )
            button(type="submit", class="btn") Submit

        